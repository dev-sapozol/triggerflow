type EmailInbox {
  id: ID
  userId: ID
  from: String
  to: String
  cc: String
  bcc: String
  subject: String
  preview: String
  inboxType: Int
  isRead: Boolean
  hasAttachment: Boolean
  importance: Int
  inReplyTo: String
  references: String
  s3Url: String
  threadId: String
  textBody: String
  htmlBody: String
  folder: Int
  deletedAt: String
  createdAt: String
  updatedAt: String
}

input EmailInboxFilter {
  isRead: Boolean
  importance: Int
  hasAttachment: Boolean
  folder: Int!
  to: String
  cc: String
  deletedAt: String
}

type GetBasicEmailList {
  id: ID
  from: String
  to: String
  cc: String
  subject: String
  preview: String
  isRead: Boolean
  hasAttachment: Boolean
  importance: Int
  threadId: String
  folder: Int
  deletedAt: String
  createdAt: String
}

extend type Query {
  getEmailList(input: EmailInboxFilter!): [GetBasicEmailList!]!
  getBasicEmailList: [GetBasicEmailList]
  getEmailByID(id: ID!): EmailInbox
}

input CreateEmailInput {
  userId: ID!
  from: String!
  to: String!
  cc: String
  bcc: String
  subject: String!
  preview: String!
  inboxType: Int!
  isRead: Boolean!
  hasAttachment: Boolean!
  importance: Int!
  textBody: String!
  htmlBody: String
  folder: Int
}

extend type Mutation {
  createEmail(input: CreateEmailInput!): EmailInbox!
}
